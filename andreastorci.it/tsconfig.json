{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/app/*"],
      "@components/*": ["./src/app/components/*", "./src/admin/components/*"],
      "@inc/*": ["./src/app/inc/*"],
      "@style/*": ["./src/app/style/*"],
      "@ctypes/*": ["./src/app/types/*"],
      "@admin/*": ["./src/admin/*"],
      "@astyle/*": ["./src/admin/style/*"],
      "@apages/*": ["./src/admin/components/pages/*"],
      "@apages": ["./src/admin/components/pages/index.ts"],
      "@providers": ["./src/admin/components/provider/index.ts"],
      "@data": ["./public/data/personalData.json"],
      "@common/*": ["./src/admin/components/common/*"]
    },
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
